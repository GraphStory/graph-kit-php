{{< layout }}

{{$ title }}Social{{/ title }}

{{$ content }}
<div class="row">
    <div class="col-md-3">
        {{> social-nav.mustache }}
    </div>
    <div class="col-md-6">
        <h3>Current Friends</h3>
        <table class="table" id="following">
            {{# following }}
            <tr>
                <td>{{ username }}</td>
                <td><a href="#" id="{{ username }}" class="removefriend">Remove</a></td>
            </tr>
            {{/ following }}
        </table>
    </div>
    <div class="col-md-3">
        <h3>Friend Suggestions</h3>
        <table class="table" id="suggestions">
            {{# suggestions }}
            <tr>
                <td>{{ username }}</td>
                <td>({{commonFriends}} friends in common)
                <td><a href="#" id="{{ username }}" class="addfriend">Add as Friend</a></td>
            </tr>
            {{/ suggestions }}
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-3 col-md-offset-9">
        <h3>Search For Friends</h3>
        <form class="form-horizontal" id="socialfriendsearchform">
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="text" class="form-control input-lg" id="username" name="username" placeholder="Search by Username" value="" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" id="socialfriendsearch" class="btn btn-default">Search</button>
                </div>
            </div>
        </form>
        <table class="table" id="userstoadd">
        </table>
    </div>
</div>
{{/ content }}

{{/ layout }}
