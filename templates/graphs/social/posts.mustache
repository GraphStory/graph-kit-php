{{< layout }}

{{$ title }}Social{{/ title }}

{{$ content }}
<h3>Social Graph - Home</h3>
<p>This section of the application demonstrates some of the common features of a social graph, such as connecting with other users as well as adding and reading posts.</p>

{{# flash.joinSuccess }}
<div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <strong>Welcome to the Graph Kit, {{ usr }}!</strong> Let's get started!
</div>
{{/ flash.joinSuccess }}

<div class="row">
    <div class="col-md-3">
        {{> social-nav }}
    </div>
    <div class="col-md-9">
        <h3>Graph Story - Social Feed</h3>
        <p id="contentAddEdit">
            <a href="#" id="addcontent">Add Content</a>
            <form class="form-horizontal hidey" id="contentform" action="#" >
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control input-sm" id="title" name="title" value="" placeholder="e.g., Graph Story" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="url" class="col-sm-2 control-label">URL</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control input-rly-lg" id="url" name="url" value="" placeholder="e.g., http://www.graphstory.com" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="text" class="form-control input-sm" id="contentuuid" name="contentuuid" value="" />
                        <button type="submit" id="btnSaveContent" class="btn btn-default"> </button>
                    </div>
                </div>
            </form> 
        </p>
        <table class="table table-striped" id="content">
            {{^ socialContent }}
            <tr>
                <td>No content yet!  Trying adding some <a href="/friends">Friends.</a></td>
            </tr>
            {{/ socialContent }}

            {{# socialContent }}
            <tr>
                <td>
                    <a href="{{ url }}" target="_blank">{{ title }}</a> {{# owner }} Edit/Delete {{/ owner }}  <br>
                    tags: {{ tagstr }} :: Posted by {{ userNameForPost }} at <a href="/viewpost/{{ uuid }}">{{ timestamp }}</a><br>
                </td>
            </tr>
            {{/ socialContent }}

            {{# moreContent }}
            <tr id="morecontent">
                <td>
                    <a href="#" class="next" >Next &gt; &gt; &gt; </a><input type="hidden" id="contentcount" value="3" />
                </td>
            </tr>
            {{/ moreContent }}
        </table>
    </div>
</div>
{{/ content }}
{{/ layout }}
